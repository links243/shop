.tabs {
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #3c3c3c;
  border-bottom: 1rpx solid #eee;
}

.active {
  color: #eb5260;
}

.goodsList_item {
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 26rpx;
}

.goodsList_item>.img {
  width: 200rpx;
  height: 200rpx;
}
.goodsList_item>.img image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.info {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info>.info_top {
  height: 76rpx;
  font-size: 26rpx;
  color: #555;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info>.info_bottom {
  font-size: 30rpx;
  color: #eb4450;
}